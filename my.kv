#:import utils kivy.utils
<Button>
    font_size:28
    size_hint:(0.3,0.3)
    background_normal:''
    background_color:'#465345'
<TextInput>
    background_color:(1,1,1,1)
<Label>
    font_size:45
<Calculator>
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height
        TextInput:
            id:calc_input
            text:'0'
            halign:"right"
            font_size:65
            size_hint:(1,.15)
        GridLayout:
            cols:4
            rows:5

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"%"
                background_color:(0.4,0.4,0.4,1)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"CE"
                background_color:(0.4,0.4,0.4,1)
            Button:
                id:clear
                size_hint:(0.2,0.2)
                font_size:32
                text:"C"
                background_color:(0.4,0.4,0.4,1)
                on_press:root.clear()
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"/"
                background_color:(0.4,0.4,0.4,1)
                on_press:root.divide(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"7"
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.change(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"8"
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.change(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"9"
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.change(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"*"
                background_color:(0.4,0.4,0.4,1)
                on_press:root.multiply(self.text)

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"4"
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.change(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"5"
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.change(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"6"
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.change(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"-"
                background_color:(0.4,0.4,0.4,1)
                on_press:root.sub(self.text)

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"1"
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.change(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"2"
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.change(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"3"
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.change(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"+"
                background_color:(0.4,0.4,0.4,1)
                on_press:root.sum(self.text)
            
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"+/-"
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.changeSign()
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"0"
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.change(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"."
                background_color:utils.get_color_from_hex('##78737D')
                on_press:root.dot(self.text)
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"="
                background_color:(0.4,0.4,0.4,1)
                on_press:root.equals()
